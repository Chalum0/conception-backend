generator client {
  provider = "prisma-client-js"
  output   = "../generated/mongo-client"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URI")
}

model GameConfig {
  id        String   @id @map("_id") @default(auto()) @db.ObjectId
  userId    String
  gameId    String
  settings  Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, gameId])
  @@map("game_configs")
}
